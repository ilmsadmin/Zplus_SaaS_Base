# Zplus SaaS Base - Frontend Environment Configuration
# Copy this file to .env.local and update with your values

# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_NAME=Zplus SaaS Base
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZE=false

# ================================
# API Configuration
# ================================

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:8082
NEXT_PUBLIC_API_BASE_PATH=/api/v1

# GraphQL
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8082/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=ws://localhost:8082/graphql
NEXT_PUBLIC_ENABLE_GRAPHQL_PLAYGROUND=true

# Internal API Routes
API_URL=http://api:8080
GRAPHQL_URL=http://api:8080/graphql

# ================================
# Authentication Configuration
# ================================

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-for-development
NEXTAUTH_URL_INTERNAL=http://frontend:3000

# Keycloak Provider
KEYCLOAK_ID=zplus-frontend
KEYCLOAK_SECRET=your-keycloak-client-secret
KEYCLOAK_ISSUER=http://localhost:8081/realms/zplus

# Session Configuration
SESSION_MAX_AGE=86400  # 24 hours
SESSION_UPDATE_AGE=3600  # 1 hour

# ================================
# Domain Configuration
# ================================

# Main Domains
NEXT_PUBLIC_MAIN_DOMAIN=localhost
NEXT_PUBLIC_ADMIN_DOMAIN=admin.localhost
NEXT_PUBLIC_SUBDOMAIN_PATTERN={tenant}.localhost

# URL Configuration
NEXT_PUBLIC_ADMIN_URL=http://admin.localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Custom Domain Support
NEXT_PUBLIC_CUSTOM_DOMAIN_ENABLED=true
NEXT_PUBLIC_SSL_ENABLED=false

# ================================
# Multi-Tenancy Configuration
# ================================

# Tenant Resolution
NEXT_PUBLIC_TENANT_STRATEGY=subdomain  # Options: subdomain, path, header
NEXT_PUBLIC_DEFAULT_TENANT=demo
NEXT_PUBLIC_ENABLE_TENANT_CREATION=true

# White-labeling
NEXT_PUBLIC_ENABLE_WHITE_LABEL=true
NEXT_PUBLIC_THEME_CUSTOMIZATION=true

# ================================
# UI/UX Configuration
# ================================

# Theme
NEXT_PUBLIC_DEFAULT_THEME=light  # Options: light, dark, auto
NEXT_PUBLIC_THEME_TOGGLE_ENABLED=true

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,vi
NEXT_PUBLIC_LOCALE_DETECTION=true

# Layout & Navigation
NEXT_PUBLIC_SIDEBAR_COLLAPSED=false
NEXT_PUBLIC_ENABLE_BREADCRUMBS=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# ================================
# Feature Flags
# ================================

# Core Features
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_TENANT_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_FILE_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Advanced Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_REAL_TIME=false
NEXT_PUBLIC_ENABLE_PWA=true

# Module Features
NEXT_PUBLIC_ENABLE_POS_MODULE=true
NEXT_PUBLIC_ENABLE_INVENTORY_MODULE=true
NEXT_PUBLIC_ENABLE_REPORTING_MODULE=true
NEXT_PUBLIC_ENABLE_CRM_MODULE=false

# ================================
# File Upload Configuration
# ================================

# Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=50  # MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Storage
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/upload
NEXT_PUBLIC_FILE_BASE_URL=http://localhost:8082/files

# ================================
# External Services
# ================================

# Google Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ================================
# Development Configuration
# ================================

# Development Tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_MOCK_API=false

# Hot Reload
FAST_REFRESH=true
TURBOPACK=false

# Performance
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_BUNDLE_ANALYZER=false

# ================================
# Monitoring & Analytics
# ================================

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Analytics
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_GTM_ID=

# Performance Monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
NEXT_PUBLIC_PERFORMANCE_API_URL=

# ================================
# Security Configuration
# ================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=false
CSP_REPORT_URI=

# CORS Configuration
CORS_ORIGIN=http://localhost:8082

# API Security
NEXT_PUBLIC_API_KEY_HEADER=X-API-Key
API_RATE_LIMIT=100

# ================================
# SEO & Marketing
# ================================

# Meta Tags
NEXT_PUBLIC_SITE_NAME=Zplus SaaS Base
NEXT_PUBLIC_SITE_DESCRIPTION=Multi-tenant SaaS platform for modern businesses
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_IMAGE=/images/og-image.png

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@zplus
NEXT_PUBLIC_FACEBOOK_APP_ID=

# Sitemap & Robots
NEXT_PUBLIC_ENABLE_SITEMAP=true
NEXT_PUBLIC_ROBOTS_TXT_ENABLED=true

# ================================
# Real-time Features
# ================================

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8082/ws
NEXT_PUBLIC_ENABLE_WEBSOCKET=false

# Server-Sent Events
NEXT_PUBLIC_SSE_URL=http://localhost:8082/events
NEXT_PUBLIC_ENABLE_SSE=false

# ================================
# Progressive Web App
# ================================

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_CACHE_STRATEGY=CacheFirst
NEXT_PUBLIC_PWA_OFFLINE_FALLBACK=/offline

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@zplus.io

# ================================
# Database (Client-side)
# ================================

# Local Storage
NEXT_PUBLIC_LOCAL_STORAGE_PREFIX=zplus_
NEXT_PUBLIC_SESSION_STORAGE_PREFIX=zplus_session_

# IndexedDB
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
NEXT_PUBLIC_OFFLINE_DB_NAME=zplus_offline

# ================================
# Testing Configuration
# ================================

# Test Environment
NEXT_PUBLIC_MOCK_DATA=false
NEXT_PUBLIC_TEST_USER_EMAIL=test@example.com
NEXT_PUBLIC_TEST_TENANT=test-tenant

# E2E Testing
NEXT_PUBLIC_E2E_BASE_URL=http://localhost:3000
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000

# ================================
# Build Optimization
# ================================

# Bundle Analysis
ANALYZE_BUNDLE=false
BUNDLE_ANALYZER_ENABLED=false

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,api.localhost
NEXT_PUBLIC_IMAGE_QUALITY=75

# Performance
NEXT_PUBLIC_PREFETCH_ENABLED=true
NEXT_PUBLIC_PRELOAD_ENABLED=true

# ================================
# Logging & Debugging
# ================================

# Client-side Logging
NEXT_PUBLIC_LOG_LEVEL=info  # Options: debug, info, warn, error
NEXT_PUBLIC_CONSOLE_LOGS=true
NEXT_PUBLIC_REMOTE_LOGGING=false

# Debug Features
NEXT_PUBLIC_SHOW_COMPONENT_NAMES=true
NEXT_PUBLIC_SHOW_RENDER_COUNT=false

# ================================
# Experimental Features
# ================================

# React Features
REACT_STRICT_MODE=true
REACT_PROFILER=false

# Next.js Features
NEXT_PUBLIC_EXPERIMENTAL_APP_DIR=true
NEXT_PUBLIC_EXPERIMENTAL_TURBOPACK=false

# ================================
# Production Overrides
# ================================
# Uncomment and modify these for production deployment

# Security
# NEXTAUTH_SECRET=generate-strong-production-secret
